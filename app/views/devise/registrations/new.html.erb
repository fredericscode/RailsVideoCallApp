<div class="container">
    <div class="row">
      <div class="col-sm-6">
         <div class="header">
             <h1 class="h1">
              <span class="H1__phrase">One workflow.</span><br/>
              <span class="smaller">From local development</span><br/>
              <span class="smaller">to global deployment.</span>
             </h1>
             <p>
              Netlify is everything you need to build fast, modern websites: continuous
              deployment, serverless functions, and so much more.
             </p>
         </div>
         <div class="auth-icons">
             <i class="fas fa-file-code"></i>
             <i class="fas fa-laptop-code"></i>
             <i class="fas fa-video"></i>
         </div>
      </div>
      <div class="col-sm-6">
        <div class="form-block">
          <h1>Sign up to get started</h1>
          <div class="form-body">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= devise_error_messages! %>
    
              <div class="form-row">
                <div class="form-group col-md-6">
                  <%= f.label :name %><br />
                  <%= f.text_field :name, class: "form-control", autocomplete: "name" %>
                </div> 
                <div class="form-group col-md-6">
                  <%= f.label :email %><br />
                  <%= f.email_field :email, class: "form-control", autocomplete: "email" %>
                </div>
                <div class="form-group col-md-6">
                  <%= f.label :github_link %><br />
                  <%= f.text_field :github_link, class: "form-control" %>
                </div>
                <div class="form-group col-md-6">
                  <%= f.label :avatar %><br />
                  <%= f.file_field :avatar, class: "form-control" %>
                </div>
                <div class="form-group col-md-6">
                  <%= f.label :level %><br />
                  <%= f.select :level, [['Junior', 'junior'], ['Senior', 'senior']], class: "form-control" %>
                </div>
                <div class="form-group col-md-6">
                  <%= f.label :password %>
                  <%= f.password_field :password, class: "form-control", autocomplete: "new-password" %>
                </div>
              </div>
    
              <div class="actions form-group">
                <%= f.submit "Sign up", class: "btn" %>
              </div>
            <% end %>
    
            <%= render "devise/shared/links" %>
    
          </div>
        </div>
    
      </div>
    </div>
</div>












